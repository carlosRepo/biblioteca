<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6 col-md-offset-6">    
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>nombre</th>
                            <th>dias extras</th>
                            <th>controles</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each perfiles}}
                        <tr>
                            <td>{{idPerfil}}</td>
                            <td>{{nombrePerfil}}</td>
                            <td>{{diasExtraPerfil}}</td>
                            <td>
                            <a href="/editPerfil/{{_id}}">editar</a>
                            <a href="/deletePerfil/{{_id}}">eliminar</a>
                            </td>    
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




